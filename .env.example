# =============================================================================
# mkv2castUI Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# =============================================================================
# Django Backend
# =============================================================================
DJANGO_SECRET_KEY=your-super-secret-key-change-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,mkv2cast.io

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
POSTGRES_DB=mkv2cast
POSTGRES_USER=mkv2cast
POSTGRES_PASSWORD=change-this-secure-password
DATABASE_URL=postgres://mkv2cast:change-this-secure-password@postgres:5432/mkv2cast

# =============================================================================
# Redis (Cache & Message Broker)
# =============================================================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =============================================================================
# Next.js Frontend
# =============================================================================
NEXT_PUBLIC_API_URL=/api
NEXT_PUBLIC_WS_URL=/ws
NEXTAUTH_URL=http://localhost:8080
NEXTAUTH_SECRET=your-nextauth-secret-generate-with-openssl-rand-base64-32

# =============================================================================
# OAuth - Google (Optional)
# =============================================================================
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# =============================================================================
# OAuth - GitHub (Optional)
# =============================================================================
# Get credentials from: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# =============================================================================
# S3 Storage (Optional - for cloud file storage)
# =============================================================================
USE_S3=false
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET_NAME=mkv2cast
S3_REGION=us-east-1

# =============================================================================
# mkv2cast Conversion Settings
# =============================================================================
# Hardware backend: auto, vaapi, qsv, cpu
MKV2CAST_DEFAULT_HW=auto
# VAAPI device path (for Intel/AMD GPUs)
MKV2CAST_VAAPI_DEVICE=/dev/dri/renderD128

# =============================================================================
# Authentication Mode
# =============================================================================
# Set to 'false' to disable authentication (local/development mode)
# When disabled, a local anonymous user is automatically used
REQUIRE_AUTH=true
